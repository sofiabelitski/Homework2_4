<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" >
<center><TextArea fx:id="textarea" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="300" editable="false"/></center>
<bottom><HBox>
    <TextField fx:id="textfield" promptText="write your message" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="button" text="Send" onAction="#sendmessage"/>
</HBox></bottom>

</BorderPane>
